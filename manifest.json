{
	"name": "News Validator",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Verifies if the news is fake or realistic",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "News Validator",
		"default_popup": "extension.html"
	},

	"background":{
			"scripts":["eventPage.js"],
			"persistent":false
	},

	"permissions": [
		"storage",
		"notifications",
		"contextMenus"
]

}
